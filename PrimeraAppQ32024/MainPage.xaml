<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PrimeraAppQ32024.MainPage">

    <ScrollView>
        <VerticalStackLayout Padding="30,0" Spacing="5">
            <Label Text="Ingrese valor de a:"/>
            <Entry x:Name="txtA" Keyboard="Numeric"/>
            
            <Label Text="Ingrese valor de b:"/>
            <Entry x:Name="txtB" Keyboard="Numeric"/>
            
            <Label Text="Ingrese valor de c:"/>
            <Entry x:Name="txtC" Keyboard="Numeric"/>
            
            <Label Text="El valor de X1:"/>
            <Entry x:Name="txtX1"/>
            
            <Label Text="El valor de X2:"/>
            <Entry x:Name="txtX2"/>
            
            <Button Text="Calcular" x:Name="txtCalcular" BackgroundColor="Green" Clicked="txtCalcular_Click"/>
            <Button Text="Limpiar" x:Name="txtLimpiar" BackgroundColor="Red" Clicked="txtLimpiar_Click"/>
        </VerticalStackLayout>
        
    </ScrollView>

</ContentPage>
